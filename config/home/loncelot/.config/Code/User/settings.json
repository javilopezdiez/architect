    // Terminal
    // "git.path": "D:\\Program Files\\Git\\bin\\git.exe",
    "terminal.integrated.allowMnemonics": true,
    "terminal.explorerKind": "external",
    "terminal.integrated.defaultProfile.windows": "bash",
    "terminal.integrated.profiles.windows": {
        "bash": {
            "path": "D:\\Program Files\\Git\\bin\\bash.exe",
            "icon": "terminal-bash"
        }
    },
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "/bin/bash",
            "args": [
                "-c",  // Tells bash to execute the following command string
                "cd ${workspaceFolder} && sudo -u $(echo ${workspaceFolder} | cut -d'/' -f3) bash",
                    // Change the working directory to the VSCode workspace folder
                    // Switch to the user and start a new bash shell
                    // ${userHome} - /home/your-username so i do pipe to get the user of the folder
                "--noprofile",  // Don't load profile scripts like .bash_profile
                "--norc",  // Don't source .bashrc or other initialization files
                "-c",  // Instruct the new bash shell to execute the following command string
                "'exec bash'",  // Replace the current shell process with an interactive bash session
            ],
            "icon": "terminal-linux"
        }
    },
    
    // Extensions
    "glassit.alpha": 240,

    "[oraclesql]": {
        "editor.suggest.showSnippets": true,
